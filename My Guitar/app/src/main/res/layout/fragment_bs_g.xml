<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.myguitar.com.myguitar.bsGFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment_bs_g_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="G Major Key" />

            <TextView
                android:id="@+id/g_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="G Major Scale Notes: G A B C D E F#"
                android:layout_marginLeft="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/g_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Key Signature: One Sharp"
                android:layout_marginLeft="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/g_formular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scale Formula: 1 2 3 4 5 6 7"
                android:layout_marginLeft="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/g_Interval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scale Intervals: W W H W W W H"
                android:layout_marginLeft="15dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/g_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="G Major CAGED Scale Fretboard Patterns" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/gmajorscalepatterns" />

            <TextView
                android:id="@+id/g_title2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="G Major Scale 3 Notes Per String Fretboard Patterns" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/gmajorscale_3nps" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>